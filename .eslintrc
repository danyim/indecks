{
  "extends": "airbnb",
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "env": {
    "browser": true,
    "node": true
  },
  "parser": "babel-eslint",
  "rules": {
    "arrow-parens": 1,
    "babel/new-cap": 1,
    "babel/no-await-in-loop": 1,
    "comma-dangle": 0,
    "generator-star-spacing": 1,
    "object-shorthand": 1,
    "quotes": [2, "single"],
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
    "strict": [2, "never"]
  },
  "plugins": [
    "babel",
    "react"
  ],
  "globals": {
    "firebase": true,
    "sinon": true
  }
}
