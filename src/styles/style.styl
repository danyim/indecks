@import '_normalize.styl'
@import '_variables.styl'
@import '_typography.styl'
@import '_animations.styl'
// @import 'components/*'

:global
  html, body
    height 100%
  body
    background offwhite
  .center
    margin: 0 auto
  .pointer
    cursor: pointer

  .m-t
    margin-top 1.0rem
  .m-b
    margin-bottom 1.0rem

  .wrap-row
    flex-wrap wrap
    flex-direction row
    justify-content space-between

  .grid-figure
    flex-flow row wrap
    flex-basis calc(33.333% - 2rem)
    flex-grow 1
    flex-shrink 0
    margin 0 1rem 2rem 1rem
    // padding 2rem
    border 1px solid lightgrey
    background white
    position relative

  // .editable
  //   &:hover:after
  //     position: absolute
  //     top: 0
  //     right: 0
  //     font-size: 2.0rem
  //     font-weight: normal
  //     content 'Editable'
  //     background-color: red
  //     padding: 2rem 0

  // For inline editable fields
  .invalid
    border 1px solid darken(red, 20%)

  @media (max-width: cardWidth)
    .grid-figure
      flex-basis calc(100% - 2rem)

  .single
    max-width cardWidth
    min-width cardWidth
    flex-shrink: 0

  .single .grid-figure
    // Single stack
    box-shadow 7px 7px 6px 1px rgba(0,0,0,0.05)

  @media (max-width: cardWidth)
    .single
      min-width: unset
      flex: 1 0

  /*
    Buttons
  */
  .control-buttons
    width 100%
    flex-flow row wrap
    .button
      flex-grow 1
      margin-right 1rem

  button, .button
    border 2px solid lightgrey
    border-radius 0.5rem
    background none
    flex-basis 48%
    display inline-block
    // line-height 2
    text-decoration none
    padding 0.90rem 0.75rem
    margin 0.50rem 0
    text-align center
    color blue
    transition all 0.2s
    box-sizing padding-box
    cursor pointer
    &:hover, &:focus
      border-color blue
      outline 0
    &[disabled]
      color lightgrey
      cursor: not-allowed
    &[disabled]:hover
      border-color lightgrey

  .btn-inactive
    color lightgrey
  .btn-active
    color green
  .btn-delete
    color red
    &:hover, &:focus
      border-color red

  /*
    Forms
  */
  .edit-form
    padding 2rem 2rem
    display flex
    flex 1 0 auto
    flex-flow column nowrap
    justify-content space-between
  input, textarea
    width 100%
    border 0
    font-size 1.4rem
    padding 1rem 0
    border-bottom 1px solid lightgrey
    outline none
    resize vertical
    transition all 0.2s
    opacity 0.6
    &:hover
      opacity 1
  textarea.mono
    font-family Consolas, "Liberation Mono", Menlo, Courier, monospace;
    font-size 1.5rem
    line-height 18px
    // border 1px solid lightgrey
  .large-input
    font-size 2.5rem

  main.main-container
    flex-grow 1
    flex-direction row
    order 2
    justify-content center
    section
      margin-top contentMargin

  @media (max-width: cardWidth)
    main.main-container section
      margin-top 0.4rem

  footer
    order 3
    display flex
    flex-direction row
    justify-content center
    p, a, a:active, a:hover, a:visited
      font-size 1.3rem
      color lighten(lightgrey, 10%)
