@import '../_variables';

.deck-import
  max-width pageWidth
.grid-figure
  flex-direction column
  h3
    margin-top: 0
  form
    padding: 0

.figure-box
  flex 1 0 33.33%
  display flex

.drop
  width 100%
  padding 1rem 0
  margin 1rem 0
  border 1px dashed lighten(gray, 60%)
  text-align center
  p
    color lighten(gray, 60%)
.drop-active
  border 1px solid green
.drop-reject
  border 1px solid red
