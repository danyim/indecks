@import '../_variables';

.frontBack
  display: inline-block
  a, .separator
    font: 200 1.5rem 'Dosis'
    color: grey
  a
    cursor: pointer

.front, .back
  transition: all .2s
  user-select: none

a.active
  font-weight: bold
  transform: scale(1.1)
  color: blue

.separator
  color: grey
  margin: 0 1rem
