@import '../_variables'

// figure is added here to give precedence over the base grid-figure
figure.grid-figure
  display: flex
  min-height: 275px
  flex-direction: column
  justify-content: flex-start
  figcaption
    padding: 2rem 5rem
    li
      font-size: 1.5rem
      line-height: 1.5

.card-title p
  font-size: 2.5rem
  padding: 2rem 5rem
  cursor: pointer
  text-align: center

.center
  justify-content: center
  align-content: center
  p
    color: lightgray
    font-weight: bold
    text-align: center

.no-answer
  color: lightgray
  // padding: 2rem 2.5rem 1rem 2.5rem
  align-self: flex-end
  div
    font-size: 1.3rem
    width: 7.0rem
  *
    position: absolute
    bottom: 1.5rem
    right: 1.5rem

.card-contents
  flex: 1 0
  display: flex
  justify-content: center
  overflow-y: hidden // Hide excess content
  h1
    font-size: 3.0rem
  h2
    font-size: 2.5rem
  h3
    font-size: 2.25rem
  h4
    font-size: 2.0rem
  h5
    font-size: 1.75rem
  pre
    background-color: #fafafa
    border: 1px solid #ddd
    padding: 1rem
  code
    text-overflow: ellipsis

@media (max-width: cardWidth)
  figure.grid-figure
    min-height: unset
    figcaption
      padding: 2rem
      height: calc(100vh - 100px)
      overflow: scroll
  .card-title
    padding: 2rem
    height: calc(100vh - 100px)
    overflow: scroll
    justify-content: center
    p
      padding: 0
