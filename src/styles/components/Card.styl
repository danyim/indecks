@import '../_variables'

// figure is added here to give precedence over the base grid-figure
figure.grid-figure
  display flex
  min-height 275px
  flex-direction column
  justify-content: flex-start
  figcaption
    padding 2rem 5rem
    li
      font-size 1.5rem
      line-height 1.5

.card-title
  font-size 2.5rem
  padding 2rem 5rem
  cursor pointer

@media (max-width: cardWidth)
  figure.grid-figure figcaption
    padding 2rem 2rem
  .card-title
    padding 2rem 2rem

.center
  justify-content: center
  align-content: center
  p
    color lightgray
    font-weight bold
    text-align center

.no-answer
  font-size: 2rem;
  color: lightgray
  // padding: 2rem 2.5rem 1rem 2.5rem
  align-self: flex-end
  *
    position: absolute
    bottom: 1.5rem
    right: 1.5rem

.card-contents
  flex: 1 0
  display: flex
  justify-content: center
