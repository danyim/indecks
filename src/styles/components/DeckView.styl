@import '../_variables';

.deck-view
  width: 100%
  max-width: pageWidth
  // .grid-figure
  //   flex-basis: calc(50% - 2rem)
  //   margin: 0 1rem 2rem 0rem

// Individual card styles
.grid
  justify-content: center
  figure
    flex-basis: calc(50% - 4rem)
    transition: all .2s
  // div > h1
  //   width: 550px
  //   // white-space nowrap
  //   overflow: hidden
  //   text-overflow: ellipsis

.card-contents
  > div:first-child  // Targets the <div className="card-contents">
    opacity: 1
    // transition all 0.2s
    background-color: rgba(255, 255, 255, 1)
  &:hover > div:first-child
    opacity: .17
    background-color: rgba(0, 0, 0, .15)

@media (max-width: cardWidth)
  .grid figure
    flex-basis: calc(100% - 4rem)

.title-card
  border: 1px solid lightgrey
  background-color: white
  border-bottom: 5px solid black
  margin: 0 1rem 2rem 1rem
  padding: 2rem
  padding-top: 4rem
  flex-flow: row wrap
.title-text
  margin-top: 2rem
  flex: 1 1 75%
  order: 1
  text-overflow: ellipsis
  > *
    flex: 1 0 auto
  :global
    .editable
      min-height: 5rem

.control-buttons
  margin-top: 1.0rem
  flex-flow: column nowrap
  flex-grow: 1
  order: 2
  transition: all .2s ease-in
  margin-left: 2rem
  button, a
    flex: 1 0 calc(25% - 1rem)
    margin-top: .6rem
    // max-height: 4.0rem
  button:first-child, a:first-child
    margin-top: 0

@media (max-width: cardWidth)
  .title-card
    flex-flow: column nowrap
    justify-content: center

  .control-buttons
    flex-flow: row nowrap
    margin-left: 0
    margin-top: 3rem
    button, a
      flex: 1 0 calc(25% - 2rem)
      margin-top: 0
      margin-left: .6rem
    button:first-child, a:first-child
      margin-left: 0

