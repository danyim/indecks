@import '../_variables';

.deck-grid
  width: calc(100% - 5rem * 2)
  max-width: pageWidth
  margin: inherit 5rem 2rem 5rem
  flex-grow: 1
  flex-shrink: 0
  flex-flow: row wrap
  justify-content: center
  .grid-figure
    // This would be nice to have if it didn't bleed into the single cards
    transition: all .1s ease-out
    &:hover
      transform: scale(1.03, 1.03)
