@import '_normalize.styl'
@import '_variables.styl'
@import '_typography.styl'
@import '_animations.styl'

pageWidth = 1200px

html, body
  height 100%

body
  background offwhite

#react-root
  display flex

main.main-container
  order 3
  section
    margin 3rem 5rem

nav.nav-container
  order 1
  height 70px
  background rgba(255,255,255,0.8)
  border-bottom 1px solid lighten(gray, 70%)
  .nav-outer-container
    display flex
    flex-direction column
    flex-shrink 0
    -webkit-box-align center
    align-items center
  .nav-inner-container
    max-width pageWidth
    padding 20px 40px
    display flex
    width 100%
    flex-direction column
    -webkit-box-align center
    align-items center
    h1
      flex-shrink 0

.content
footer
  text-align right
//   @extends .deck-grid


.deck-grid
  display flex
  flex-wrap wrap
  max-width pageWidth
  margin 0 auto

.grid-figure
  flex-basis calc(33.333% - 4rem)
  flex-grow 1
  flex-shrink 0
  margin 0 2rem 2rem 2rem
  padding 2rem
  border 1px solid lightgray
  background white
  // Multiple stacks
  // box-shadow \
  //   3px 3px 0 1px lighten(black, 97%),\
  //   4px 4px 0 1px lighten(black, 91%),\
  //   8px 8px 0 1px lighten(black, 96%),\
  //   9px 9px 0 1px lighten(black, 90%)
  position relative
  .card-title h1
    font-size 3.0rem
    cursor pointer
  .card-count
    // text-transform uppercase
    // font-size 1.2rem
    // font-weight bold

.single-card
  @extend .grid-figure
  // Single stack
  box-shadow 7px 7px 6px 1px rgba(0,0,0,0.05)
  max-width 900px
  margin 0 auto
  display flex
  background white
  .grid-figure
    box-shadow none
    margin 0 2rem 0 0
    border 0
    padding 0
    flex 1 0 100%
    max-width 100%
  .deck-navigator
    display block
    flex 1 0 100%
    max-width 100%
  .grid-card
    width 100%
    margin 0

.grid-card
  width calc(100% + 4rem)
  margin-left -2rem
  margin-top -2rem
  max-width none

// Comments
.remove-comment
  background none
  border 0
  line-height 1
  opacity 0
  &:hover
    color red

.deck-navigator
  max-width 900px
  margin 0 auto
  border-bottom 1px solid lightgrey
  padding 0.5rem 0
  text-align center

  div
    margin 0.25rem 1.0rem
  .deck-nav-links, .deck-nav-count, .deck-nav-controls
    display inline-block
    color darken(offwhite, 30%)
    font-size 1.5rem
    font-weight bold
  .deck-nav-controls
    .button, a
      font-size 1.5rem
      border none
  .deck-nav-links
    display block
  p
    font-size 1.5rem
    margin 0
  strong
    color blue
    margin-right 5px
  &:hover
    .remove-comment
      opacity 1

.edit-form
  input, textarea
    width 100%
    border 0
    font-size 1.3rem
    padding 1rem 0
    border-bottom 1px solid lightgrey
    outline none
    resize vertical
    transition all 0.2s
    opacity 0.6
    &:hover
      opacity 1
  .large-input
    font-size 4rem


.grid-deck-wrap
  // position relative
  display flex // experimenting
  h1
    cursor pointer
    align-self flex-start
    flex 1 0 100%

.likes-heart
  background url(http://f.cl.ly/items/3Y373q2Q3J3Y1j203n0m/Bitmap-3.png) center no-repeat
  background-size contain
  font-size 2rem
  padding 1rem
  position absolute
  color blue
  left 50%
  top 50%
  pointer-events none


/*
  Buttons
*/

.control-buttons
  display flex
  justify-content space-between

button, .button
  border 2px solid lighten(grey, 93%)
  background none
  flex-basis 48%
  display inline-block
  line-height 2
  text-decoration none
  padding 5px
  text-align center
  color blue
  transition all 0.2s
  box-sizing padding-box
  cursor pointer
  &:hover, &:focus
    border-color blue
    outline 0
  &[disabled]
    color #BBB
  &[disabled]:hover
    border-color none

.button-delete
  color red
  &:hover, &:focus
    border-color red

/*
  Cowboy style speech bubble - you should probably use an SVG for this if you are doing more icons.
*/
.speech-bubble
  size = 1.25rem
  width size * 1.2
  height size
  background blue
  display inline-block
  border-radius 50%
  position relative
  &:after
    display inline-block
    position absolute
    content ''
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 0 size size 0
    border-color: transparent blue transparent transparent
    top 30%
    left 0




