@import '_normalize.styl'
@import '_variables.styl'
@import '_typography.styl'
@import '_animations.styl'

pageWidth = 1200px
contentMargin = 2rem

html, body
  height 100%

body
  background offwhite

.wrap-row
  flex-wrap wrap
  flex-direction row

nav.nav-container
  order 1
  height 70px
  background rgba(255,255,255,0.8)
  border-bottom 1px solid lighten(gray, 85%)
  .nav-outer-container
    flex-shrink 0
    align-items center
  .nav-inner-container
    max-width pageWidth
    padding 20px 40px
    width 100%
    align-items center
    h1
      flex-shrink 0

main.main-container
  flex-grow 1
  flex-direction row
  order 3
  justify-content center
  section
    margin-top contentMargin
  .deck-grid
    width calc(100% - 5rem * 2)
    max-width pageWidth
    margin inherit 5rem 2rem 5rem
    flex-grow 1
    flex-shrink 0
    flex-direction row
    justify-content center
    flex-wrap wrap
  .deck-view
    width calc(100% - 5rem * 2)
    max-width pageWidth
    .grid-figure
      flex-basis calc(50% - 2rem)
      margin 0 1rem 2rem 0rem
    // .deck-title
  .single
    max-width pageWidth
  .deck-import
    max-width pageWidth
    .grid-figure
      display flex
      flex-basis auto

.content,footer
  text-align right
//   @extends .deck-grid

.grid-figure
  flex-direction row
  flex-basis calc(33.333% - 2rem)
  flex-grow 1
  flex-shrink 0
  margin 0 1rem 2rem 1rem
  padding 2rem
  border 1px solid lightgray
  background white
  // Multiple stacks
  // box-shadow \
  //   3px 3px 0 1px lighten(black, 97%),\
  //   4px 4px 0 1px lighten(black, 91%),\
  //   8px 8px 0 1px lighten(black, 96%),\
  //   9px 9px 0 1px lighten(black, 90%)
  position relative
  .card-title h1
    font-size 2.4rem
    cursor pointer
  .card-count
    // text-transform uppercase
    // font-size 1.2rem
    // font-weight bold

.single-card
  @extend .grid-figure
  width 700px
  // Single stack
  box-shadow 7px 7px 6px 1px rgba(0,0,0,0.05)
  max-width pageWidth
  background white
  .grid-figure
    box-shadow none
    margin 0 2rem 0 0
    border 0
    padding 0
    flex 1 0 100%
    max-width 100%
  .deck-navigator
    display block
    flex 1 0 100%
    max-width 100%
  .grid-card
    width 100%
    margin 0

.grid-card
  width calc(100% + 4rem)
  margin-left -2rem
  margin-top -2rem
  max-width none

.figure-box
  width 33.33%
  display flex
  .container
    margin 1rem 4rem 1rem 1rem
    // border 2px dashed lighten(gray, 50%)
    text-align center
    .symbol
      color blue
      font-size 13rem
      // font-weight bold
      position relative
      top 1.2rem
      transition all 0.1s ease-out
      &:hover
        transform rotate(7deg) scale(1.2,1.2)

.deck-navigator
  max-width 900px
  margin 0 auto
  border-bottom 1px solid lightgrey
  padding 0.5rem 0
  text-align center

  div
    margin 0.25rem 1.0rem
  .deck-nav-links, .deck-nav-count, .deck-nav-controls
    display inline-block
    color darken(offwhite, 30%)
    font-size 1.5rem
    font-weight bold
  .deck-nav-controls
    .button, a
      font-size 1.5rem
      border none
  .deck-nav-links
    display block
  p
    font-size 1.5rem
    margin 0
  strong
    color blue
    margin-right 5px
  &:hover
    .remove-comment
      opacity 1

.edit-form
  display flex
  flex-direction column
  flex-flow space-between
  input, textarea
    width 100%
    border 0
    font-size 1.3rem
    padding 1rem 0
    border-bottom 1px solid lightgrey
    outline none
    resize vertical
    transition all 0.2s
    opacity 0.6
    &:hover
      opacity 1
  .large-input
    font-size 4rem


/*
  Buttons
*/

.control-buttons
  width 100%
  flex-direction row
  justify-content space-between
  // .button


button, .button
  border 2px solid lighten(grey, 93%)
  background none
  flex-basis 48%
  display inline-block
  line-height 2
  text-decoration none
  padding 5px
  text-align center
  color blue
  transition all 0.2s
  box-sizing padding-box
  cursor pointer
  &:hover, &:focus
    border-color blue
    outline 0
  &[disabled]
    color #BBB
  &[disabled]:hover
    border-color none

.button-delete
  color red
  &:hover, &:focus
    border-color red

.drop
  width 100%
  padding 1rem 0
  margin 1rem 0
  border 1px dashed lighten(gray, 60%)
  text-align center
  p
    color lighten(gray, 60%)
.drop-active
  border 1px solid green
.drop-reject
  border 1px solid red
